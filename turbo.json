{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**/.env", ".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "NODE_ENV",
        "API_REST_URL",
        "NEXT_PUBLIC_OPENLANE_URL",
        "AUTH_GITHUB_ID",
        "AUTH_GITHUB_SECRET",
        "AUTH_GOOGLE_ID",
        "AUTH_GOOGLE_SECRET",
        "SESSION_COOKIE_NAME",
        "SESSION_COOKIE_DOMAIN",
        "NEXT_PUBLIC_ALLOWED_LOGIN_DOMAINS",
        "SESSION_NEXAUTH_MAX_AGE",
        "RECAPTCHA_SECRET_KEY",
        "AWS_REGION",
        "OPENLANE_API_WRITE_TOKEN",
        "NOVU_API_KEY",
        "DEVREV_AAT",
        "STRIPE_SECRET_KEY",
        "GOOGLE_AI_PROJECT_ID",
        "GOOGLE_AI_REGION",
        "GOOGLE_CREDENTIALS",
        "GOOGLE_APPLICATION_CREDENTIALS",
        "GOOGLE_RAG_CORPUS_ID",
        "NEXT_PUBLIC_AI_SUGGESTIONS_ENABLED",
        "GOOGLE_AI_MODEL_NAME",
        "GOOGLE_GENERATIVE_AI_API_KEY"
      ],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "storybook-static/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
